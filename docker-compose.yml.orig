version: "3.2"

services:
  node:
    build:
      context: .
      dockerfile: ./docker/node/Dockerfile
    container_name:
      container_node
    image:
      smilebhai/node
    volumes:
    # https://stackoverflow.com/a/32785014/232619
      - .:/app
      - /app/node_modules
    command: /usr/local/wait-for-it.sh mongo:27017 -- npm start
    env_file:
      - .env
    ports:
      - 3000:3000
    depends_on:
      - mongo
  mongo:
    build:
      context: .
      dockerfile: ./docker/mongo/Dockerfile
    container_name:
      container_mongo    
    image:
      smilebhai/mongo
    restart: always
    ports:
      - 27017:27017
    volumes:
      - ./data:/data/db
